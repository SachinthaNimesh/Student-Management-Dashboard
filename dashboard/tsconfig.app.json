{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "types": ["node","react","react-dom"],

    /* Module resolution */
    "moduleResolution": "node", // Changed from "bundler" to "node"
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx", // Ensure this is set for React 17+ with TypeScript

    /* Linting */
    "strict": true, // Enabled strict mode
    "noUnusedLocals": true, // Enforce unused local variables check
    "noUnusedParameters": true, // Enforce unused parameters check
    "noImplicitAny": true, // Disallow implicit 'any' types
    "noFallthroughCasesInSwitch": true,

    /* Additional options */
    "esModuleInterop": true, // Added for CommonJS compatibility
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in imports
    "allowSyntheticDefaultImports": true, // Allow default imports

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}

